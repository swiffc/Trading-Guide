# Environment Configuration Template
# Copy this file to .env.local, .env.staging, or .env.production

# Application
NODE_ENV=production
APP_NAME=trading-guide
APP_VERSION=1.0.0

# Server
PORT=8080
HOST=0.0.0.0

# Timezone (for EST trading hours)
TZ=America/New_York

# Domain
DOMAIN=trading-guide.app
PROTOCOL=https

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Security
ENABLE_CORS=true
CORS_ORIGIN=*
ENABLE_RATE_LIMIT=true
RATE_LIMIT_MAX=100

# Cache
CACHE_ENABLED=true
CACHE_TTL=3600

# Feature Flags
ENABLE_SERVICE_WORKER=true
ENABLE_PWA=true
ENABLE_OFFLINE_MODE=true

# Analytics (Optional)
ENABLE_ANALYTICS=false
GOOGLE_ANALYTICS_ID=
MIXPANEL_TOKEN=

# CDN (Optional)
CDN_URL=
ENABLE_CDN=false

# Database (Future feature)
DATABASE_ENABLED=false
DATABASE_URL=

# Redis (Future feature)
REDIS_ENABLED=false
REDIS_URL=
