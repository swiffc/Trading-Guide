{
  "name": "trading-guide",
  "version": "1.0.0",
  "description": "Trading Guide - Quarterly Theory & BTMM Method PWA",
  "main": "index.html",
  "scripts": {
    "dev": "docker-compose -f docker-compose.dev.yml up",
    "dev:stop": "docker-compose -f docker-compose.dev.yml down",
    "build": "docker build -t trading-guide:latest .",
    "build:prod": "docker build -t trading-guide:prod -f Dockerfile .",
    "start": "docker-compose up -d",
    "stop": "docker-compose down",
    "start:prod": "docker-compose --profile production up -d",
    "start:monitoring": "docker-compose --profile monitoring up -d",
    "logs": "docker-compose logs -f app",
    "test": "echo \"Running tests...\" && exit 0",
    "test:e2e": "echo \"Running E2E tests...\" && exit 0",
    "lint": "echo \"Linting files...\" && exit 0",
    "format": "echo \"Formatting files...\" && exit 0",
    "deploy:staging": "./scripts/deploy.sh staging",
    "deploy:production": "./scripts/deploy.sh production",
    "k8s:apply": "kubectl apply -k kubernetes/",
    "k8s:delete": "kubectl delete -k kubernetes/",
    "k8s:status": "kubectl get all -n trading-guide",
    "terraform:init": "cd terraform && terraform init",
    "terraform:plan": "cd terraform && terraform plan",
    "terraform:apply": "cd terraform && terraform apply",
    "monitoring:start": "docker-compose --profile monitoring up -d prometheus grafana",
    "monitoring:stop": "docker-compose stop prometheus grafana",
    "security:scan": "docker scan trading-guide:latest"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/trading-guide.git"
  },
  "keywords": [
    "trading",
    "forex",
    "quarterly-theory",
    "btmm",
    "pwa",
    "trading-guide"
  ],
  "author": "Trading Guide Team",
  "license": "MIT",
  "devDependencies": {},
  "dependencies": {},
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
